<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title></title>
    </head>
    <body>
        <h1><%= @ingredients['title'] %></h1><br>
        <img style="border:6px solid black; width: 50%;" src="<%= @ingredients['image'] %>" alt="<%= @ingredients['title'] %>"/>
        <p>Ready in:
            <%= @ingredients['readyInMinutes'] %>
            minutes</p>
        <div style="border:4px solid black;">
            <%@ingredients["extendedIngredients"].each do |ingredient| %>
              <li><%= ingredient["originalString"] %></li>
            <% end %>
        </div>
        <h2>Instructions</h2>
        <div style="border:4px solid black;">
            <% @recipe.each do |step| %>
              <p><b><%= step['number'] %></b>:
                <%= step['step'] %></p>
            <% end %>
        </div>

    </body>
</html>
