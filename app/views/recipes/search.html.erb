<div class="container">
  <div class="col-sm-10">
    <form action='/recipes/search_results' method='GET'>

     <fieldset class="form-group">
      <label for="Cuisine">Cuisine</label>
      <input type="text" class="form-control" id="cuisine"  name="cuisine"placeholder="American, French...">
     </fieldset>

    <fieldset class="form-group" id="custom-ingredients">
      <label for="ingredients">Ingredients</label>
      <textarea style="resize:none;" class="form-control" rows="3" id="content" name="ingredients" placeholder="beef, chicken, corn..."></textarea>
    </fieldset>

    <% if logged_in? %>
    <fieldset style="display:none;" class="form-group" id="my-ingredients">
      <label for="ingredients">My Ingredients</label>
      <textarea style="resize:none;" class="form-control" rows="3" id="content" name="ingredients" value="<%= user_ingredient_search(current_user) %>" readonly></textarea>
    </fieldset>
      <fieldset class="form-group">
        <div class="checkbox" >
          <label class="users-ingredients"><input type="checkbox" value=""><div class="users-ingredients">Use your ingredients</div></label>
        </div>
      </fieldset>
    <% end %>

    <fieldset class="form-group">
      <label for="Allergies">Allergies</label>
      <input type="text" class="form-control" id="allergies"  name="allergies"placeholder="peanuts, shellfish...">
     </fieldset>


    <fieldset class="form-group">
      <label for="Cuisine">Course</label>
      <input type="text" class="form-control" id="cuisine"  name="course"placeholder="main dish, dessert...">

     </fieldset>

      <fieldset class="form-group">
      <label for="specific_recipe">Specific Recipe</label>
      <input type="text" class="form-control" id="query"  name="query"placeholder="burger, sushi...">
     </fieldset>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
