<div class="contain">
  <div class="row">
    <% @recipes.each do |recipe| %>
    <div class="col-sm-3 col-lg-3 col-md-3">
      <div>
        <div class="thumbnail">
          <div class="caption" style="height: 550px";>
          	<div>
          		<img src="<%= recipe.image %>" style="width: 100%; height: auto";>
          	</div>

          	<div>
          		<small class="left">Recipe of the Day</small>
              <h3 class="left"><a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></h3>
          		<h5 class="left">
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star-half-o"></span>
                <span class="fa fa-star-o"></span>
              </h5>
          	</div>
      
          	<hr>
          	<div>
          		<div class="row">
          			<div class="col-sm-3 col-lg-3 col-md-3">
                  <% if User.find(UserRecipe.find(recipe.id).user_id).img_url == nil %>
                   <img src="<%= Recipe.find(recipe.id).image %>" style="width: 50px; height: auto">
                  <% else %>
          				  <img src="<%= User.find(UserRecipe.find(recipe.id).user_id).img_url %>">
                  <% end %>
          			</div>
          			<div class="col-sm-9 col-lg-9 col-md-9">
          				<p>Reciped Submitted by: <%= User.find(UserRecipe.find(recipe.id).user_id).name %> </p>
          			</div>

                <div class="col-sm-9 col-lg-9 col-md-9">
                  <p><span class="fa fa-heart"></span> <%= rand(1..100) %>&nbsp;&nbsp;
                  <span class="fa fa-cutlery"></span> <%= rand(1..100) %></p>
                </div>
          		</div>
          	</div>






          </div>
        </div>

        <br>
      </div>
    </div>
    <% end %>
  </div>
